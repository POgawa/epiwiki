
  <h1 style="margin-top: 40px;" font-family="Lora Bold">Epicodus Reference Wiki</h1>

<form action="/results" method="post" style="margin-top: 20px;">
  <input placeholder="Enter keyword to search" id="search_word" name="search_word" type="text">
  <button type="submit">Search</button>
</form>


<div class='container'>
  <h2 class="transparent">Current tags:</h2>
    <div class='row'>
      <%@tags.each do |tag|%>
        <ul id="menu" class="list-inline">
          <li class="col-md-2"> <a    href="/results/<%=tag.topic%>"><%=tag.topic%></a></li>
       </ul>
  <%end%>
    </div>
</div>
